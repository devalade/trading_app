<%- include('../layouts/header'); -%> 

	<div class="content-wrapper">
<%- include('../layouts/left_sidebar'); -%> 
<main class="main-wrapper clearfix">
			<!-- Page Title Area -->
			<div class="row page-title clearfix">
				<div class="page-title-left">
					<h6 class="page-title-heading mr-0 mr-r-5">Help Form</h6>
				</div>
				<!-- /.page-title-left -->
				<div class="page-title-right d-none d-sm-inline-flex">
					<ol class="breadcrumb">
						<li class="breadcrumb-item"><a href="index.html">Dashboard</a>
						</li>
						<li class="breadcrumb-item active">Create Help</li>
					</ol>
				</div>
				<!-- /.page-title-right -->
			</div>
			<!-- /.page-title -->
			<!-- =================================== -->
			<!-- Different data widgets ============ -->
			<!-- =================================== -->
			<div class="widget-list">
				<div class="row">
					<div class="col-md-12 widget-holder">
						<div class="widget-bg">
							<div class="widget-body clearfix">
                                <form action="/api/user/update/<%= user.id %> " method="POST">
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label" for="sample1UserName">User Name</label>
                                        <div class="input-group col-md-5">
                                            <div class="input-group-addon"><i class="material-icons">person</i></div>
                                            <input value="<%= user.user_name %>" name="user_name" type="text" class="form-control" id="sample1UserName">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label" for="l2">Email Address</label>
                                        <div class="col-md-6">
                                            <div class="input-group"><span class="input-group-addon"><i class="material-icons list-icon">mail_outline</i> </span>
                                                <input value="<%= user.user_email %>" name="user_email" class="form-control" id="l2" type="email">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label" for="l13">Gender</label>
                                        <div class="col-md-3">
                                            <select value="<%= user.user_gender %>" name="user_gender" class="form-control" id="l13">
                                                <option value="male">Male</option>
                                                <option value="female">Female</option>
                                            </select>
                                        </div>
                                    </div>                             
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label" for="l2">User Mobile</label>
                                        <div class="col-md-6">
                                            <div class="input-group"><span class="input-group-addon"><i class="material-icons list-icon">call</i> </span>
                                                <input value="<%= user.user_mobile %>" name="user_mobile" class="form-control" id="l2" type="text">
                                            </div>
                                        </div>
                                    </div>                                
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label" for="l13">User Country</label>
                                        <div class="col-md-4">
                                            <select value="<%= user.user_country %>" name="user_country" class="form-control" id="l13">
                                                <option value="India">India</option>
                                                <option value="USA">USA</option>
                                                <option value="Spain">Spain</option>
                                                <option value="France">France</option>
                                                <option value="Chine">Chine</option>
                                            </select>
                                        </div>
                                    </div>  
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label" for="l13">User City</label>
                                        <div class="col-md-4">
                                            <select value="<%= user.user_capital %>" name="user_capital" class="form-control" id="l13">
                                                <option value="Bombay">Bombay</option>
                                                <option value="Hong-Kong">Hong-Kong</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label" for="l7">User Adress</label>
                                        <div class="col-md-4">
                                              <input value="<%= user.user_address %>" name="user_address" class="form-control" id="l7" type="text">
                                        </div>
                                    </div>
                                    <div class="form-group row">
										<label class="col-md-3 col-form-label" for="l0">Postal Code</label>
										<div class="col-md-3">
											<input value="<%= user.user_postal_code %>" name="user_postal_code" class="form-control" id="l0" type="number">
										</div>
									</div>
                                    <div class="form-group row">
										<label class="col-md-3 col-form-label" for="l0">Social ID</label>
										<div class="col-md-3">
											<input value="<%= user.social_id %>" name="social_id" class="form-control" id="l0" type="number">
										</div>
									</div>
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label" for="l13">User Type</label>
                                        <div class="col-md-3">
                                            <select value="<%= user.user_type %>" name="user_type" class="form-control" id="l13">
                                                <option value="Demo">Demo</option>
                                                <option value="Real">Real</option>
                                            </select>
                                        </div>
                                    </div>   
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label" for="l13">Login Type</label>
                                        <div class="col-md-3">
                                            <select value="<%= user.login_type %>" name="login_type" class="form-control" id="l13">
                                                <option value="User">User</option>
                                                <option value="Admin">Admin</option>
                                            </select>
                                        </div>
                                    </div>                                 
                                    
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label" for="l13">User Currency</label>
                                        <div class="col-md-3">
                                            <select value="<%= user.user_currency %>" name="user_currency" class="form-control" id="l13">
                                                <option value="Dollar">Dollar</option>
                                                <option value="INR">INR</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label" for="l7">User Wallet</label>
                                        <div class="col-md-4">
                                            <input value="<%= user.user_wallet %>" name="user_wallet" class="form-control" id="l7" type="text">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label" for="l7">Bonus</label>
                                        <div class="col-md-4">
                                            <input value="<%= user.user_bonus %>" name="user_bonus" class="form-control" id="l7" type="text">
                                        </div>
                                    </div>
									<div class="form-group row">
										<label class="col-md-3 col-form-label" for="l15">Is active</label>
										<div class="col-md-9">
											<input <%=user.is_active == 1 ? 'checked' : '' %>  name="is_active" type="checkbox"  class="js-switch" data-color="#e91e63">
										</div>
									</div>
									<!-- <div class="form-group row">
										<label class="col-md-3 col-form-label" for="l15">Sounds</label>
										<div class="col-md-9">
											<input  type="checkbox" class="js-switch" data-color="#e91e63">
										</div>
									</div>
									<div class="form-group row">
										<label class="col-md-3 col-form-label" for="l15">Deal Result Dialog</label>
										<div class="col-md-9">
											<input type="checkbox" checked="checked" class="js-switch" data-color="#e91e63">
										</div>
									</div> -->
									<div class="form-actions">
										<div class="form-group row">
											<div class="col-md-9 ml-md-auto btn-list">
												<button class="btn btn-primary btn-rounded" type="submit">Submit</button>
												<a href="/api/user">
												    <button class="btn btn-outline-default btn-rounded" type="button">Cancel</button>
                                                </a>
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</main>
		<!-- /.main-wrappper -->
<%- include('../layouts/right_sidebar'); -%> 
		
	<!-- /.content-wrapper -->
<%- include('../layouts/footer'); -%> 