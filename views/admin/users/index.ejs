<%- include('../layouts/header'); -%> 

	<div class="content-wrapper">
<%- include('../layouts/left_sidebar'); -%> 
		<main class="main-wrapper clearfix">
			<!-- Page Title Area -->
			<div class="row page-title clearfix">
				<div class="page-title-left">
					<h6 class="page-title-heading mr-0 mr-r-5">User List</h6>
				</div>
				<!-- /.page-title-left -->
				<div class="page-title-right d-none d-sm-inline-flex">
					<ol class="breadcrumb">
						<li class="breadcrumb-item"><a href="index.html">Dashboard</a>
						</li>
						<li class="breadcrumb-item active">User List</li>
					</ol>
				</div>
				<!-- /.page-title-right -->
			</div>
			<!-- /.page-title -->
			<!-- =================================== -->
			<!-- Different data widgets ============ -->
			<!-- =================================== -->
			<div class="widget-list">
				<div class="row">
					<div class="col-md-12 widget-holder">
						<div class="widget-bg">
							<div class="widget-body clearfix">
								<table class="table table-bordered table-responsive" data-toggle="datatables">
									<thead>
										<tr>
											<th>ID</th>
											<th>UserName</th>
											<th>Email</th>
											<th>Login Type</th>
											<th>Is Active</th>
											<th>Action</th>
										</tr>
									</thead>
									<tbody>
										<% i =1; users.forEach(user => { %>
										 
										<tr>
											<td><%= i %></td>
											<td><%= user.user_name %></td>
											<td><%= user.user_email %></td>
											<td><%= user.login_type %></td>
											<td><input <%= user.is_active ==1 ? 'checked' : '' %> type="checkbox" id=""></td>
											<td>
                                                <a href="/api/user/<%= user.id %>" class="color-content">
                                                    <i class="material-icons md-18">update</i>
                                                </a>
                                                <a href="/api/user/delete/<%= user.id %>" title="Delete" class="color-content">
                                                    <i class="material-icons md-18">delete</i>
                                                </a>
                                                <a href="/api/user/show/<%= user.id %>" class="btn btn-warning">Show User</button>
											</td>
										</tr>
										<% i++;}) %>

									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
				<!-- /.row -->
			</div>
			<!-- /.widget-list -->
		</main>
		<!-- /.main-wrappper -->
<%- include('../layouts/right_sidebar'); -%> 
		
	<!-- /.content-wrapper -->
<%- include('../layouts/footer'); -%> 