<%- include('../layouts/header'); -%> 
	<div class="content-wrapper">
<%- include('../layouts/left_sidebar'); -%> 
		
		<main class="main-wrapper clearfix">
			<!-- Page Title Area -->
			<div class="row page-title clearfix">
				<div class="page-title-left">
					<h6 class="page-title-heading mr-0 mr-r-5">FAQ List</h6>
					<p class="page-title-description mr-0 d-none d-md-inline-block">r√©ponses, questions, date</p>
				</div>
				<!-- /.page-title-left -->
				<div class="page-title-right d-none d-sm-inline-flex">
					<ol class="breadcrumb">
						<li class="breadcrumb-item"><a href="index.html">Dashboard</a>
						</li>
						<li class="breadcrumb-item active">FAQ List</li>
					</ol>
				</div>
				<!-- /.page-title-right -->
			</div>
			<!-- /.page-title -->
			<!-- =================================== -->
			<!-- Different data widgets ============ -->
			<!-- =================================== -->
			<div class="widget-list">
				<div class="row">
					<div class="col-md-12 widget-holder">
						<div class="widget-bg">
							<div class="widget-body clearfix">
								<table class="table table-bordered table-responsive" data-toggle="datatables">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Questions</th>
                                            <th>Answers</th>
                                            <th>Is Active</th>
											<th>Create Date</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% faq.forEach(faqs => { %>
										 
                                        <tr>
                                            <td><%= faqs.id %> </td>
                                            <td>
                                                <%= faqs.faq_question %> 
                                            </td>
                                            <td>
                                                <%= faqs.faq_anwer %>
                                            </td>
                                            <td><input <%= faqs.is_active ==1 ? 'checked' : '' %> type="checkbox" name="" id=""></td>
                                            <td> <%= new Date(faqs.createdAt).toDateString() %>  </td>
                                            <td>
												<a href="/api/faq/<%= faqs.id %>" class="color-content" ><i class="material-icons md-18" >update</i> 
												</a>
												<a href="/api/faq/delete/<%= faqs.id %>" title="Delete" class="color-content" onclick="return confirm('Are you sure to delete this record ?');">
													<i class="material-icons md-18">delete</i>
												</a>
                                            </td>
                                        </tr>
										<% }) %>

                                    </tbody>
                                </table>
							</div>
						</div>
					</div>
				</div>
				<!-- /.row -->
			</div>
			<!-- /.widget-list -->
		</main>
		<!-- /.main-wrappper -->
<%- include('../layouts/right_sidebar'); -%> 
		
	<!-- /.content-wrapper -->
<%- include('../layouts/footer'); -%> 
	