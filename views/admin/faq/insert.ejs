<%- include('../layouts/header')  -%> 
	<div class="content-wrapper">
<%- include('../layouts/left_sidebar'); -%> 
		<main class="main-wrapper clearfix">
			<!-- Page Title Area -->
			<div class="row page-title clearfix">
				<div class="page-title-left">
					<h6 class="page-title-heading mr-0 mr-r-5">FAQ Form</h6>
				</div>
				<!-- /.page-title-left -->
				<div class="page-title-right d-none d-sm-inline-flex">
					<ol class="breadcrumb">
						<li class="breadcrumb-item"><a href="index.html">Dashboard</a>
						</li>
						<li class="breadcrumb-item active">Create Form</li>
					</ol>
				</div>
				<!-- /.page-title-right -->
			</div>
			<!-- /.page-title -->
			<!-- =================================== -->
			<!-- Different data widgets ============ -->
			<!-- =================================== -->
			<div class="widget-list">
				<div class="row">
					<div class="col-md-12 widget-holder">
						<div class="widget-bg">
							<div class="widget-body clearfix">
								<form action="/api/faq/insert" method="POST">
									<div class="form-group row">
										<label class="col-md-3 col-form-label" for="l15">Question</label>
										<div class="col-md-9">
											<textarea name="faq_question" class="form-control" id="l15" rows="3"></textarea>
										</div>
									</div>
									<div class="form-group row">
										<label class="col-md-3 col-form-label" for="l15">Answer</label>
										<div class="col-md-9">
											<textarea name="faq_anwer" class="form-control" id="l15" rows="3"></textarea>
										</div>
									</div>
									<div class="form-group row">
										<label class="col-md-3 col-form-label" for="l15">Is active</label>
										<div class="col-md-9">
											<input name="is_active" type="checkbox" checked="checked" class="js-switch" data-color="#e91e63">
										</div>
									</div>
									<div class="form-actions">
										<div class="form-group row">
											<div class="col-md-9 ml-md-auto btn-list">
												<button class="btn btn-primary btn-rounded" type="submit">Create</button>
                                                <a href="/api/faq">
												    <button class="btn btn-outline-default btn-rounded" type="button">Cancel</button>
                                                </a>
												<!-- <button class="btn btn-secondary btn-rounded" type="button">Retourner Ã  la liste</button> -->
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</main>
		<!-- /.main-wrappper -->
<%- include('../layouts/right_sidebar'); -%> 
		
	<!-- /.content-wrapper -->
<%- include('../layouts/footer'); -%> 