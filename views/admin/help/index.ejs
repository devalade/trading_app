<%- include('../layouts/header')  -%> 
	<div class="content-wrapper">
<%- include('../layouts/left_sidebar'); -%> 
		<main class="main-wrapper clearfix">
			<!-- Page Title Area -->
			<div class="row page-title clearfix">
				<div class="page-title-left">
					<h6 class="page-title-heading mr-0 mr-r-5">Help List</h6>
				</div>
				<!-- /.page-title-left -->
				<div class="page-title-right d-none d-sm-inline-flex">
					<ol class="breadcrumb">
						<li class="breadcrumb-item"><a href="index.html">Dashboard</a>
						</li>
						<li class="breadcrumb-item active">Help List</li>
					</ol>
				</div>
				<!-- /.page-title-right -->
			</div>
			<!-- /.page-title -->
			<!-- =================================== -->
			<!-- Different data widgets ============ -->
			<!-- =================================== -->
			<div class="widget-list">
				<div class="row">
					<div class="col-md-12 widget-holder">
						<div class="widget-bg">
							<div class="widget-body clearfix">
								<table class="table table-bordered table-responsive" data-toggle="datatables">
									<thead>
										<tr>
											<th>ID</th>
											<th>Language</th>
											<th>Country Flag</th>
											<th>Description</th>
											<th>Phone</th>
											<th>Email</th>
											<th>Is Active</th>
											<th>Created Date</th>
											<th>Action</th>
										</tr>
									</thead>
									<tbody>
                                        <% helps.forEach(help => { %>
										<tr>
											<td><%= help.id %></td>
											<td><%= help.help_language %></td>
											<td><%= help.help_country_flag %></td>
											<td><%= help.help_description %></td>
											<td><%= help.help_phone %></td>
											<td><%= help.help_email %></td>
											<td><input <%= help.is_active ==1 ? 'checked' : '' %> type="checkbox" name="" id=""></td>
											<td> <%= new Date(help.createdAt).toDateString() %></td>
											<td>
												<a href="/api/help/<%= help.id %>" class="color-content" ><i class="material-icons md-18" >update</i> 
												</a>
												<a href="/api/help/delete/<%= help.id %>" title="Delete" class="color-content" onclick="return confirm('Are you sure to delete this record ?');">
													<i class="material-icons md-18">delete</i>
												</a>
                                            </td>
										</tr>
                                        <% }) %>
										
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
				<!-- /.row -->
			</div>
			<!-- /.widget-list -->
		</main>
		<!-- /.main-wrappper -->
		<%- include('../layouts/right_sidebar'); -%> 
		
	<!-- /.content-wrapper -->
<%- include('../layouts/footer'); -%> 